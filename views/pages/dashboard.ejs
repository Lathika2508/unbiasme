<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>User Dashboard</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/dashboard.css" />
  </head>
  <body>
    <div
      class="nav d-flex justify-content-between align-items-center px-3 py-2 bg-light"
    >
      <a href="/" class="logo">UnbiasMe</a>
      <div class="hamburger" id="hamburger">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="60"
          height="60"
          viewBox="0 0 200 200"
        >
          <g stroke-width="6.5" stroke-linecap="round">
            <path d="M72 82.286h28.75" fill="#009100" stroke="#000" />
            <path
              d="M100.75 103.714l72.482-.143c.043 39.398-32.284 71.434-72.16 71.434-39.878 0-72.204-32.036-72.204-71.554"
              fill="none"
              stroke="#000"
            />
            <path d="M72 125.143h28.75" fill="#009100" stroke="#000" />
            <path
              d="M100.75 103.714l-71.908-.143c.026-39.638 32.352-71.674 72.23-71.674 39.876 0 72.203 32.036 72.203 71.554"
              fill="none"
              stroke="#000"
            />
            <path d="M100.75 82.286h28.75" fill="#009100" stroke="#000" />
            <path d="M100.75 125.143h28.75" fill="#009100" stroke="#000" />
          </g>
        </svg>
      </div>
    </div>

    <div class="sidebar-overlay" id="sidebar">
      <div class="sidebar-menu text-center">
        <a href="/" class="d-block py-2">Home</a>
        <a href="/quiz" class="d-block py-2">Take Quiz</a>
        <a href="/profile" class="d-block py-2">Profile</a>
        <a href="/logout" class="d-block py-2">Logout</a>
      </div>
    </div>

    <div class="container mt-4">
      <h2>Welcome, <%= username %></h2>

      <% if (user && (!user.age || !user.dob || !user.gender)) { %>
      <div class="alert alert-warning mt-3">
        Please take a minute to
        <a href="/profile">complete your profile</a> (age, date of birth,
        gender).
      </div>
      <% } %> <% if (Object.keys(traitScores).length === 0) { %>
      <p>You haven't taken the quiz yet.</p>
      <a href="/quiz" class="btn btn-primary">Take me to the quiz</a>
      <% } else { %>
      <div class="mt-3">
        <h4>Your Trait Scores:</h4>
        <% for (let trait in traitScores) { %>
        <div><strong><%= trait %></strong>: <%= traitScores[trait] %>%</div>
        <% } %>
      </div>
      <% } %>

      <br />
      <!-- <a href="/logout">Logout</a> -->
    </div>

    <script src="/js/dashboard.js"></script>
  </body>
</html>
