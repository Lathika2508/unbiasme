<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Signup</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/signup.css" />
  </head>
  <body>
    <body>
  <% if (typeof error !== "undefined" && error) { %>
    <div id="errorAlert" class="alert alert-danger alert-dismissible fade show alert-popup" role="alert">
      <%= error %>
      <button type="button" class="btn-close" onclick="hideAlert()"></button>
    </div>
  <% } %>
      <main class="signup-container">
        <h2 class="text-center mb-2">Welcome to UnbiasMe</h2>
        <p class="text-center mb-4">
          Join our mission to uncover cognitive biases and make more informed
          decisions.
        </p>

        <form action="/user/signup" class="mt-5" method="POST">
          <div class="mb-3">
            <label class="form-label">Name</label>
            <input
              class="form-input-group"
              type="text"
              name="name"
              placeholder="Username"
              required
            />
          </div>
          <div class="mb-3">
            <label class="form-label">Email</label>
            <input
              class="form-input-group"
              type="email"
              name="email"
              placeholder="yourname@gmail.com"
              required
            />
          </div>
          <div class="mb-4">
            <label class="form-label">Password</label>
            <input
              class="form-input-group"
              type="password"
              name="password"
              placeholder="Password"
              required
            />
          </div>
        <div class="text-center mt-5">
          <button type="submit" class="btn btn-signin">Signup</button>
        </div>
          <div class="separator"><span>OR</span></div>
          <!-- Signup Button -->
        <div class="text-center">
          <a href="/login" class="btn login-option"> Login </a>
        </div>
        </form>
      </main>
  
    </body>
    <script>
    function hideAlert() {
      const alertBox = document.getElementById("errorAlert");
      if (alertBox) {
        alertBox.style.display = "none";
      }
    }
    window.onload = function () {
      const alertBox = document.getElementById("errorAlert");
      if (alertBox) {
        alertBox.style.display = "block";
      }
    };
  </script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</html>
