<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Today’s Cognitive Bias Story</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/navbar.css" />
    <style>
      .blog-post {
        padding: 1.5rem;
        border-radius: 8px;
      }
      h2.blog-post-title {
        font-size: 1.8rem;
      }
      @media (max-width: 768px) {
        .blog-post {
          padding: 1rem;
        }
        h2.blog-post-title {
          font-size: 1.5rem;
        }
      }
      .loading {
        font-style: italic;
        color: #666;
        font-size: 1.2rem;
      }
    </style>
  </head>

  <body>
    <%- include('../partials/navbar') %>

    <div class="container py-4">
      <h1 class="text-center mb-4">📚 Today’s Cognitive Bias Story</h1>

      <% if (!story) { %>
      <div id="loadingMessage" class="text-center loading">
        🌀 Generating story... please wait.
      </div>
      <div id="storyContainer" class="d-none"></div>
      <% } else { %>
      <div id="storyContainer">
        <article class="blog-post mx-auto">
          <h2 class="blog-post-title mb-2"><%= story.title %></h2>
          <p><%= story.content %></p>
          <hr />
          <h5>🧠 Bias Name:</h5>
          <p><%= story.biasName %></p>
          <h5>📘 Bias Definition:</h5>
          <p><%= story.biasDefinition %></p>
          <h5>❌ What Went Wrong:</h5>
          <p><%= story.whatWentWrong %></p>
          <h5>✅ How It Was Minimized:</h5>
          <p><%= story.howMinimized %></p>
          <h5>🌱 How This Helps:</h5>
          <p><%= story.howHelps %></p>
        </article>
      </div>
      <% } %>

      <a href="/" class="btn btn-secondary mt-3">← Back to Home</a>
    </div>

    <% if (!story) { %>
    <script>
      fetch("/story/api")
        .then((res) => res.json())
        .then((data) => {
          if (data.ready) {
            const s = data.story;
            document.getElementById("storyContainer").innerHTML = `
              <article class="blog-post mx-auto">
                <h2 class="blog-post-title mb-2">${s.title}</h2>
                <p>${s.content}</p>
                <hr />
                <h5>🧠 Bias Name:</h5><p>${s.biasName}</p>
                <h5>📘 Bias Definition:</h5><p>${s.biasDefinition}</p>
                <h5>❌ What Went Wrong:</h5><p>${s.whatWentWrong}</p>
                <h5>✅ How It Was Minimized:</h5><p>${s.howMinimized}</p>
                <h5>🌱 How This Helps:</h5><p>${s.howHelps}</p>
              </article>
            `;
            document.getElementById("loadingMessage").classList.add("d-none");
            document
              .getElementById("storyContainer")
              .classList.remove("d-none");
          } else {
            document.getElementById("loadingMessage").innerText =
              "❌ Story could not be generated. Try again later.";
          }
        })
        .catch((err) => {
          document.getElementById("loadingMessage").innerText =
            "❌ Error loading story.";
          console.error(err);
        });
    </script>
    <% } %>
  </body>
</html>
