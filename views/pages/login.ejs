<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/login.css" />
    <title>Login</title>
  </head>
  <body>
    <!-- error box -->
    <% if (typeof error !== "undefined" && error) { %>
    <div
      id="errorAlert"
      class="alert alert-danger alert-dismissible fade show alert-popup"
      role="alert"
    >
      <%= error %>
      <button type="button" class="btn-close" onclick="hideAlert()"></button>
    </div>
    <% } %>
    <!--Password-->
    <% if (typeof success !== "undefined") { %>
    <div class="alert alert-success"><%= success %></div>
    <% } %>
    <!---->
    <main class="login-container">
      <h2 class="text-center mb-4">Welcome Back</h2>
      <p class="text-center mb-4">Please enter your details to login.</p>
      <form action="/user/signin" class="mt-4" method="POST" autocomplete="off">
        <div class="mb-3">
          <label class="form-label">Email</label>
          <input
            class="form-input-group"
            type="email"
            name="email"
            placeholder="example@gmail.com"
            required
          />
        </div>
        <div class="mb-4">
          <label class="form-label">Password</label>
          <input
            class="form-input-group"
            type="password"
            name="password"
            placeholder="password"
            required
          />
        </div>
        <div class="mt-2">
          <a href="/passwordReset" class="hover-underline-animation left"
            >Forgot password?</a
          >
        </div>
        <div class="text-center mt-5">
          <button type="submit" class="btn btn-login">Login</button>
        </div>

        <div class="separator"><span>OR</span></div>

        <!-- Signup Button -->
        <div class="text-center">
          <a href="/signup" class="btn btn-signup"> Sign up </a>
        </div>
      </form>
    </main>

    <script>
      function hideAlert() {
        const alertBox = document.getElementById("errorAlert");
        if (alertBox) {
          alertBox.style.display = "none";
        }
      }
      window.onload = function () {
        const alertBox = document.getElementById("errorAlert");
        if (alertBox) {
          alertBox.style.display = "block";
        }
      };
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
