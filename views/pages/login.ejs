<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/login.css" />
    <title>Login</title>
  </head>
  <body>
    <main class="login-container">
      <h2 class="text-center mb-4">Welcome Back</h2>
      <p class="text-center mb-4">Please enter your details to login.</p>
      <form action="/user/signin" class="mt-5" method="POST">
        <div class="mb-3">
          <label class="form-label">Email</label>
          <input
            class="form-input-group"
            type="email"
            name="email"
            placeholder="example@gmail.com"
            required
          />
        </div>
        <div class="mb-4">
          <label class="form-label">Password</label>
          <input
            class="form-input-group"
            type="password"
            name="password"
            placeholder="password"
            required
          />
        </div>
        <div class="mt-2">
          <a href="/signup" class="hover-underline-animation left"
            >Don't have an account? Signup</a
          >
        </div>
        <div class="text-center mt-5">
          <button type="submit" class="btn-property">Login</button>
        </div>
      </form>
    </main>
    <script src="login.js"></script>
  </body>
</html>
